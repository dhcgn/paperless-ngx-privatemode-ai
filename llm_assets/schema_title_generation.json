{
  "name": "caption_list",
  "schema": {
    "type": "object",
    "properties": {
      "summarize": {
        "type": "string",
        "description": "A detailed summary of the document content that provides context for understanding why the captions were suggested."
      },
      "captions": {
        "type": "array",
        "description": "A list of possible captions with their relevance scores.",
        "items": {
          "type": "object",
          "properties": {
            "caption": {
              "type": "string",
              "description": "The text of the caption."
            },
            "score": {
              "type": "number",
              "description": "A score from 0 to 1 indicating how well the caption describes the content."
            }
          },
          "required": [
            "caption",
            "score"
          ],
          "additionalProperties": false
        }
      }
    },
    "required": [
      "summarize",
      "captions"
    ],
    "additionalProperties": false
  },
  "strict": true
}